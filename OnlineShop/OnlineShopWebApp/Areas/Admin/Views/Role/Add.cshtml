@model RoleViewModel

<div class="row text-center">
    <div class="col">
        <h3>Добавление новой роли</h3>
    </div>
</div>

<div class="validation" asp-validation-summary="All"></div>

<form method="post">

    <div class="row text-center">
        <div class="col">
            <div class="col-12">
                <label asp-for="Name">Наименование:</label>
                <br>
                <input type="text" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <br>
            <br>
            <a>
                <button class="btn btn-success type="submit" asp-area="Admin" asp-controller="Role" asp-action="Add">Добавить роль</button>
            </a>
        </div>
    </div>
</form>