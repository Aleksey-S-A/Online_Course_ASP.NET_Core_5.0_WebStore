@model List<UserViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    @if (Model.Count == 0)
    {
        <div class="col-9">
            <h2>Пользователи отсутствуют</h2>
        </div>
    }
    else
    {
        <div class="col-9">
            <h6>Cписок пользователей</h6>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Логин</th>
                                <th>E-Mail</th>
                                <th>Телефон</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <th>@(i + 1)</th>
                                    <th>@Model[i].Name</th>
                                    <th>@Model[i].Email</th>
                                    <th>@Model[i].Phone</th>
                                    <th><a asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-name="@Model[i].Name" role="button">Подробнее</a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    <div class="col-9" align="center">
        <br />
        <a asp-area="" asp-controller="Account" asp-action="Register" role="button">Добавить нового пользователя</a>
    </div>
</div>