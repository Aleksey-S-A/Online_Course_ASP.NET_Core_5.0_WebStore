@model UserViewModel

<form method="post">
    <div class="row">
        <div class="col-6">
            <table class="table">

                <tr>
                    <td>Логин:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Телефон:</td>
                    <td>@Model.Phone</td>
                </tr>
                <tr>
                    <td>E-Mail:</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
            </table>
        </div>
    </div>
    <br />
    <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Действия
    </button>
    <div class="dropdown-menu" aria-labeledby="dropdownMenuButton">
        <a class="dropdown-item" asparea="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-name="@Model.Name">Смена пароля</a>
        <a class="dropdown-item" asparea="Admin" asp-controller="User" asp-action="Edit" asp-route-name="@Model.Name">Редактирование данных</a>
        <a class="dropdown-item" asparea="Admin" asp-controller="User" asp-action="EditRights" asp-route-name="@Model.Name">Права доступа</a>
        <a class="dropdown-item" asparea="Admin" asp-controller="User" asp-action="Remove" asp-route-name="@Model.Name">Удалить</a>
    </div>
</form>
