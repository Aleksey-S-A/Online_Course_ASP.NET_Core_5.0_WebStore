@model EditRightsViewModel

<form method="post">
    <div class="row text-center">
        <div class="col">
            <h3>Текущие роли для пользователя @Model.UserName</h3>
        </div>
    </div>

    <input type="hidden" name="name" value="@Model.UserName">

    @foreach (var role in Model.AllRoles)
    {
        <div>
            @if (Model.UserRoles.Contains(role))
            {
                <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="" checked />
                <label class="form-check-label" for="flexCheckDefault">@role.Name</label>
            }
            else
            {
                <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="" />
                <label class="form-check-label" for="flexCheckChecked">@role.Name</label>
            }
        </div>
    }
    <div>
        <button type="submit" asp-area="Admin" asp-controller="User" asp-action="EditRights">Сменить</button>
    </div>
</form>