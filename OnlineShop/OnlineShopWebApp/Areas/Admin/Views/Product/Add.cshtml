@model AddProductViewModel

<div class="row text-center">
    <div class="col">
        <h3>Добавление нового продукта</h3>
    </div>
</div>

<div class="validation" asp-validation-summary="All"></div>

<form method="post" enctype="multipart/form-data">
    <div class="row text-center">
        <div class="col">

            <div class="col-12">
                <label asp-for="Name">Наименование:</label>
                <br>
                <input type="text" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <br>
            <div class="col-12">
                <label asp-for="Description">Описание:</label>
                <br>
                <input type="text" asp-for="Description">
                <span asp-validation-for="Description"></span>
            </div>
            <br>
            <div class="col-12">
                <label asp-for="Cost">Стоимость:</label>
                <br>
                <input type="number" asp-for="Cost" data-maxlength="7" oninput="this.value=this.value.slice(0,this.dataset.maxlength)">
                <span asp-validation-for="Cost"></span>
            </div>

            <div class="col-12">
                <label asp-for="UploadedFiles">Загрузить изображение</label>
                <br>
                <input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control">
                <span asp-validation-for="UploadedFiles"></span>
            </div>

            <br>
            <br>
            <a>
                <button class="btn btn-success type="submit" asp-area="Admin" asp-controller="Product" asp-action="Add">Добавить продукт</button>
            </a>
        </div>
    </div>
</form>