@model List<ProductViewModel>

<div class="row">

    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <div class="col">

                <a class="btn btn-dark" asp-area="Admin" asp-controller="Product" asp-action="Add" role="button">Добавить новый продукт</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th></th>
                            <th>Наименование</th>
                            <th>Описание</th>
                            <th>Стоимость</th>
                            <th>Редактировать</th>
                            <th>Удалить</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <th>@(i + 1)</th>
                                <th><img style="width:50px" src="@Model[i].ImagePath" /></th>
                                <th>@Model[i].Name</th>
                                <th>@Model[i].Description</th>
                                <th>@Model[i].Cost руб.</th>
                                <th><a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productId="@Model[i].Id" role="button">Редактировать</a></th>
                                <th><a asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model[i].Id" role="button">Удалить</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
