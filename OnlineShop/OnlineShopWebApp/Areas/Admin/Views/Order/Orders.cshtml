@model List<OrderViewModel>

<div class="row">

    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <h3>Список заказов</h3>
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Сумма</th>
                            <th>Статус</th>
                            <th>Пользователь (логин)</th>
                            <th>Дата</th>
                            <th>Время</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <th>@(i + 1)</th>
                                <th>@Model[i].Cost</th>
                                <th>@EnumHelper.GetDisplayName(Model[i].Status)</th>
                                <th>@Model[i].User.Name</th>
                                <th>@Model[i].CreateDateTime.Date.ToString("d")</th>
                                <th>@Model[i].CreateDateTime.ToString("t")</th>
                                <th><a asp-area="Admin" asp-controller="Order" asp-action="Detail" asp-route-orderId="@Model[i].Id" role="button">Подробнее</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

