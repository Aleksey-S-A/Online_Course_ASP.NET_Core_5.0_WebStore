@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" style="width:200px" src="@product.ImagePath" />
            <div class="card-body">
                <a style="color:black" asp-area="" asp-controller="product" asp-action="index" asp-route-Id="@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб.</h5>
                <a class="btn btn-dark" asp-area="" asp-controller="Basket" asp-action="Add" asp-route-productId="@product.Id" role="button">Добавить в корзину</a>
                <br />
                <br />
                <a class="btn btn-success" asp-area="" asp-controller="Favorite" asp-action="Add" asp-route-productId="@product.Id" role="button">Добавить в избранное</a>
            </div>
        </div>
    }
</div>