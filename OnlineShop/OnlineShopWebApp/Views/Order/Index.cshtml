@model UserDeliveryInfoViewModel

<h3>Оформление заказа</h3>

<form method="post">
    <div class="row text-center">
        <div class="col">

            <div class="validation" asp-validation-summary="All"></div>

            <div class="col-12">
                <label asp-for="Name">ФИО</label>
                <br>
                <input type="text" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <br>

            <div class="col-12">
                <label asp-for="Email">Почта:</label>
                <br>
                <input type="email" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <br>

            <div class="col-12">
                <label asp-for="Phone">Телефон:</label>
                <br>
                <input type="tel" asp-for="Phone" maxlength="12">
                <span asp-validation-for="Phone"></span>
            </div>
            <br>

            <div class="col-12">
                <label asp-for="Address">Адрес доставки:</label>
                <br>
                <input type="text" asp-for="Address">
                <span asp-validation-for="Address"></span>
            </div>
            <br>

            <a>
                <br>
                <button class="btn btn-success type="submit" asp-controller="Order" asp-action="Result">Сделать заказ</button>
            </a>

        </div>
    </div>
</form>
