@model ProductViewModel

<div class="row">
    <div class="col-3 card shadow">
        <img class="card-img-top" src="@Model.ImagePath" />
        <div class="card-body">
            <a style="color:black" href="/product/index/@Model.Id">
                <h5>@Model.Name</h5>
            </a>
            <h5>@Model.Cost руб.</h5>
            <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
            <a class="btn btn-dark" href="/basket/Add?productId=@Model.Id" role="button">Добавить в корзину</a>
        </div>
    </div>
</div>
